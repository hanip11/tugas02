<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/firstcardmobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/imgcardmobil"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/civic" />

                <TextView
                    android:id="@+id/cardTitlemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Civic Turbo 1500cc"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/cardPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Harga: Rp 533.000.000"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout><!-- ... (Isi dari CardView pertama) ... -->


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/secondCardmobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/firstcardmobil"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/secimgcardmobil"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/crv" />

                <TextView
                    android:id="@+id/seccardTitlemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crv 1500cc"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:id="@+id/seccardPricemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga: Rp 495.000.000"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp" />

            </LinearLayout><!-- ... (Isi dari CardView kedua) ... -->

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/thirdCardmobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/secondCardmobil"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/thirdimgcardmobil"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brv" />
                <TextView
                    android:id="@+id/thirdcardTitlemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brv 1500cc"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:id="@+id/thirdcardPricemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga: Rp 363.000.000"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp" />

            </LinearLayout><!-- ... (Isi dari CardView ketiga) ... -->

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fourthCardmobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/thirdCardmobil"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/fourimgcardmobil"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hrv" />
                <TextView
                    android:id="@+id/fourcardTitlemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hrv 1500cc"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:id="@+id/fourcardPricemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga: Rp 415.000.000"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp" />

            </LinearLayout><!-- ... (Isi dari CardView keempat) ... -->

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fifthCardmobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/fourthCardmobil"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/fiveimgcardmobil"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jazz" />
                <TextView
                    android:id="@+id/fivecardTitlemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jazz 1500cc"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:id="@+id/fivecardPricemobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga: Rp 256.000.000"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp" />

            </LinearLayout><!-- ... (Isi dari CardView kelima) ... -->

        </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>