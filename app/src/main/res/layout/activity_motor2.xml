<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/firstcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/imgcard"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aerox" />

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Yamaha Aerox 155"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/cardPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Harga: Rp 29.000.000"
                    android:textColor="#E9EFF1"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout><!-- ... (Isi dari CardView pertama) ... -->


        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/secondCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/firstcard"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/alert_dark_frame"
            android:padding="15dp">

            <ImageView
                android:id="@+id/secimgcard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nmax" />

            <TextView
                android:id="@+id/seccardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yamaha Nmax 155"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />


            <TextView
                android:id="@+id/seccardPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 33.000.000"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />

        </LinearLayout><!-- ... (Isi dari CardView kedua) ... -->

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/secondCard"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/alert_dark_frame"
            android:padding="15dp">

        <ImageView
            android:id="@+id/thirdimgcard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xmax" />
            <TextView
                android:id="@+id/thirdcardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yamaha Xmax 250"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />


            <TextView
                android:id="@+id/thirdcardPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 71.000.000"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />

        </LinearLayout><!-- ... (Isi dari CardView ketiga) ... -->

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fourthCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/thirdCard"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/alert_dark_frame"
            android:padding="15dp">

            <ImageView
                android:id="@+id/fourimgcard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lexi" />
            <TextView
                android:id="@+id/fourcardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yamaha Lexi 155"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />


            <TextView
                android:id="@+id/fourcardPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 28.000.000"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />

        </LinearLayout><!-- ... (Isi dari CardView keempat) ... -->

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fifthCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/fourthCard"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/alert_dark_frame"
            android:padding="15dp">

            <ImageView
                android:id="@+id/fiveimgcard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fazio" />
            <TextView
                android:id="@+id/fivecardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yamaha fazzio 125"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />


            <TextView
                android:id="@+id/fivecardPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 22.000.000"
                android:textColor="#E9EFF1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />

        </LinearLayout><!-- ... (Isi dari CardView kelima) ... -->

    </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>